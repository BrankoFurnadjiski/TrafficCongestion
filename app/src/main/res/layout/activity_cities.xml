<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blackBackground"
    tools:context="com.example.branko.tester.CitiesActivity">


    <EditText
        android:id="@+id/cityNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="13dp"
        android:maxLines="1"
        android:inputType="text"
        android:textColor="@color/whiteFont"
        android:background="@drawable/search_edit_text_border"
        android:hint="@string/placeholder"
        android:textColorHint="@color/whiteFont"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/citiesRecyclerView"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
